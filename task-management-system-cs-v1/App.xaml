<Application x:Class="task_management_system_cs_v1.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:task_management_system_cs_v1"
             StartupUri="LoginWindow.xaml">
    <Application.Resources>
        <!-- Built-in boolean to visibility converter -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Custom boolean to view text converter -->
        <local:BoolToViewTextConverter x:Key="BoolToViewTextConverter"/>
    </Application.Resources>
</Application>